          box-shadow: 0 -1px 3px 4px #f4f4f5;
  background-color: #eef5f5;
}
.Box .a {
  border-bottom: 3rpx solid #989f99;
  padding-top: 28rpx;
}
.Box .a .top {
  padding-left: 20rpx;
  font-size: 35rpx;
  font-weight: 500;
}
.Box .a .im {
  width: 94%;
  margin: 0 3%;
  -webkit-border-radius: 20rpx;
          border-radius: 20rpx;
}
.Box .a .atim {
  margin: -55rpx 50rpx 0;
  padding: 0 10rpx;
  -webkit-border-radius: 200rpx;
          border-radius: 200rpx;
  font-size: 3rpx;
  position: relative;
  color: #FFFFFF;
  background-color: #64646c;
  float: right;
}
.Box .a .bto {
  height: 60rpx;
  text-align: right;
  padding: 5rpx 20rpx 0 0;
}
.Box .a .bto .btoa {
  font-size: 23rpx;
  font-weight: 700;
  padding-left: 20rpx;
  float: left;
}
.Box .a .bto uni-icons {
  margin-right: 30rpx;
}
