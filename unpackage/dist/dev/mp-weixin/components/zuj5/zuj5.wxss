.Box {
  color: #353b48;
  width: 750rpx;
  height: 800px;
  margin-top: 20rpx;
  -webkit-border-top-left-radius: 20rpx;
          border-top-left-radius: 20rpx;
  -webkit-border-top-right-radius: 20rpx;
          border-top-right-radius: 20rpx;
  -webkit-box-shadow: 0 -2rpx 6rpx 8rpx #f4f4f5;
          box-shadow: 0 -2rpx 6rpx 8rpx #f4f4f5;
  padding-top: 6px;
}
.Box .box {
  width: 702rpx;
  margin-top: 20rpx;
  margin-left: 24rpx;
  margin-right: 24rpx;
}
.Box .box .videos {
  padding: 0;
}
.Box .box .videos .imgbox {
  position: relative;
  margin-top: 16rpx;
  width: 100%;
  position: relative;
}
.Box .box .videos .imgbox .videos_img {
  -webkit-border-radius: 5px;
          border-radius: 5px;
  width: 100%;
}
.Box .box .videos .imgbox .videos_length {
  font-size: 16rpx;
  width: 70rpx;
  background-color: rgba(45, 52, 54, 0.6);
  text-align: center;
  color: #ffffff;
  -webkit-border-radius: 14rpx;
          border-radius: 14rpx;
  position: absolute;
  right: 8rpx;
  bottom: 18rpx;
}
.Box .box .videos .channel {
  height: 30px;
  line-height: 30px;
  padding-bottom: 7px;
  border-bottom: 1px solid #ecf0f1;
}
.Box .box .videos .channel .author {
  float: left;
  font-size: 12px;
  font-weight: bolder;
  position: relative;
}
.Box .box .videos .channel .author::after {
  content: '';
  background-color: #74b9ff;
  width: 97rpx;
  height: 8rpx;
  position: absolute;
  left: 0px;
  top: 44rpx;
}
.Box .box .videos .channel .interact {
  float: right;
}
.Box .box .videos .channel .interact .zan {
  display: inline-block;
  color: #a4b0be;
  font-size: 14px;
}
.Box .box .videos .channel .interact .share {
  display: inline-block;
  margin-left: 80rpx;
  font-size: 14px;
  font-weight: bold;
  color: #747d8c;
}

